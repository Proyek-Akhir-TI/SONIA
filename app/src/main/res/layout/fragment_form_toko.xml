<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white"
	android:paddingBottom="50dp"
	android:paddingTop="5dp"
	android:orientation="vertical">

	<LinearLayout
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="vertical"

		android:padding="5dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/white"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/profile_imgView"
				android:layout_width="350dp"
				android:layout_height="250dp"
				android:layout_gravity="center"
				android:src="@drawable/store" />

			<Button
				android:id="@+id/profile_btnPilihGambar"
				android:layout_width="350dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:drawableLeft="@android:drawable/ic_menu_camera"
				android:text="Pilih Gambar"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintVertical_bias="0.685" />

		</LinearLayout>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingLeft="10dp"
			android:paddingTop="2dp"
			android:paddingBottom="10dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:paddingBottom="8dp"
				android:text="Nama Toko"
				android:textSize="15sp"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/profileToko_tvNama"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"
				android:text=""
				android:textAppearance="?attr/textAppearanceListItem"
				android:textSize="15sp"
				android:textStyle="bold" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingLeft="10dp"
			android:paddingTop="2dp"
			android:paddingBottom="10dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:paddingBottom="8dp"
				android:text="Alamat "
				android:textSize="15sp"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/profileToko_tvAlamat"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"
				android:text=""
				android:textAppearance="?attr/textAppearanceListItem"
				android:textSize="15sp"
				android:textStyle="bold" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingLeft="10dp"
			android:paddingTop="2dp"
			android:paddingBottom="10dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:paddingBottom="8dp"
				android:text="Kota "
				android:textSize="15sp"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/profileToko_tvKota"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"
				android:text=""
				android:textAppearance="?attr/textAppearanceListItem"
				android:textSize="15sp"
				android:textStyle="bold" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="2dip">

			<Button
				android:id="@+id/profile_btnUpdateLokasi"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_marginEnd="5sp"
				android:layout_weight="2"
				android:backgroundTint="#AEEA00"
				android:gravity="center|clip_vertical|center_horizontal|center_vertical"
				android:text="Update Lokasi"
				android:textAlignment="center"
				android:textColor="@android:color/black" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingStart="10dp"
			android:paddingTop="2dp"
			android:paddingBottom="10dp"
			tools:ignore="RtlSymmetry">

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:paddingBottom="8dp"
				android:text="Longitude"
				android:textSize="15sp"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/profileToko_tvLongitude"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"
				android:text="..."
				android:textAppearance="?attr/textAppearanceListItem"
				android:textSize="15sp"
				android:textStyle="bold" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingStart="10dp"
			android:paddingTop="2dp"
			android:paddingBottom="10dp"
			tools:ignore="RtlSymmetry">

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:paddingBottom="8dp"
				android:text="Latitude"
				android:textSize="15sp"
				android:textStyle="normal" />

			<EditText
				android:id="@+id/profileToko_tvLatitude"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"
				android:text=""
				android:textAppearance="?attr/textAppearanceListItem"
				android:textSize="15sp"
				android:textStyle="bold" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="2dip">

			<Button
				android:id="@+id/profile_btnKembali"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginEnd="5sp"
				android:layout_weight="2"
				android:backgroundTint="#FF6D00"
				android:gravity="center|clip_vertical|center_horizontal|center_vertical"
				android:text="Kembali"
				android:textAlignment="center"
				android:textColor="@android:color/white" />

			<Button
				android:id="@+id/profile_btnSimpan"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginEnd="5sp"
				android:layout_weight="2"
				android:backgroundTint="#0091EA"
				android:gravity="center|clip_vertical|center_horizontal|center_vertical"
				android:text="Simpan"
				android:textAlignment="center"
				android:textColor="@android:color/white" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>
